{
  "name": "goydazvon",
  "version": "1.0.0",
  "main": "src/server/index.ts",
  "scripts": {
    "build:client": "rollup -c",
    "watch:client": "nodemon -w src/client --exec \"npm run build:client\"",
    "start:server": "tsx .",
    "watch:server": "nodemon -w src/server --exec \"npm run build:server\"",
    "build:css": "sass src/scss/index.scss public/css/index.css --style compressed",
    "watch:css": "nodemon --ext scss -w src/scss --exec \"npm run build:css\"",
    "build": "npm run buld:client && npm run build:css",
    "start": "npm run build && npm run start:server"
  },
  "keywords": [
    "goydazvon",
    "messenger",
    "express",
    "typescript"
  ],
  "author": "Rul",
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.17",
    "@types/socket.io": "^3.0.1",
    "@types/socket.io-client": "^1.4.36",
    "nodemon": "^3.1.10",
    "rollup": "^4.41.1",
    "sass": "^1.89.1",
    "tslib": "^2.8.1",
    "tsx": "^4.19.4"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "pug": "^3.0.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+"
  }
}